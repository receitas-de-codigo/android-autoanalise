<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PerguntasActivity"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pergunta?"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:id="@+id/pergunta"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nunca"
            android:id="@+id/btnNunca"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raras vezes"
            android:id="@+id/btnRarasVezes"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Algumas vezes"
            android:id="@+id/btnAlgumasVezes"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usualmente"
            android:id="@+id/btnUsualmente"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sempre"
            android:id="@+id/btnSempre"/>
</LinearLayout>